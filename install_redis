echo '------------------------------------------------------------'
echo '--------------------开始安装redis---------------------------'
cd ~/tmp
curl -O http://redis.googlecode.com/files/redis-2.4.16.tar.gz
tar xzf redis-2.4.16.tar.gz
cd redis-2.4.16
make
cp src/redis-server src/redis-cli /usr/bin
echo '--------------------完成安装redis---------------------------'
echo '--------------------环境搭建完成----------------------------'
echo '------------------------------------------------------------'
