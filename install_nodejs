echo "------------------------------------------------------------------------"
echo "----------------------------开始安装nodejs 0.8.4------------------------"
curl -O http://nodejs.org/dist/v0.8.4/node-v0.8.4.tar.gz
tar zxf node-v0.8.4.tar.gz
cd node-v0.8.4
./configure
make && sudo make install
rm ../node-v0.8.4.tar.gz
rm -R ../node-v0.8.4
echo "----------------------------nodejs 0.8.4安装完成------------------------"
echo "------------------------------------------------------------------------"
